@model FrontEnd.Models.ImagenProductoViewModel

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

<div class="row pt-4">
    <div class="col-md-4">
        <h1 style="color:black; font-weight:600;">Añadir imagen</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mt-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CodigoProducto" class="control-label">Seleccione el producto:</label>
                @Html.DropDownListFor(
                         model => model.CodigoProducto,
                         new SelectList(Model.Productos, "CodigoProducto", "Nombre"),
                         new { @class = "form-select", onchange = "this.form.submit()" }
                         )
                <span asp-validation-for="CodigoProducto" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="RutaImagen" class="control-label"></label>
                <input asp-for="RutaImagen" class="form-control" />
                <span asp-validation-for="RutaImagen" class="text-danger"></span>
            </div>
            <div class="d-flex mt-4 align-content-center justify-content-center">
                <input type="submit" value="Guardar" class="btn btn-secondary border-0" />
                <a class="ms-4 btn btn-success border-0" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
