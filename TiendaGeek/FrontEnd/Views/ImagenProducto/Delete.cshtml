@model FrontEnd.Models.ImagenProductoViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

<div>
    <h1 class="mb-4">Eliminar imagen</h1>
    <h5>¿Seguro de eliminar esta imagen?</h5>

    <form asp-action="Delete">
        <div class="form-group mb-3">
            @Html.DisplayNameFor(model => model.CodigoImagen)
        </div>
        <div class="form-group mb-3">
            @Html.DisplayFor(model => model.CodigoImagen)
        </div>
        <div class="form-group mb-3">
            @Html.DisplayNameFor(model => model.CodigoProducto)
        </div>
        <div class="form-group mb-3">
            @Html.DisplayFor(model => model.CodigoProducto)
        </div>
        <div class="form-group mb-3">
            @Html.DisplayNameFor(model => model.RutaImagen)
        </div>
        <div class="form-group mb-3">
            @Html.DisplayFor(model => model.RutaImagen)
        </div>

        <input type="hidden" asp-for="CodigoImagen" class="form-control" />

        <button type="submit" class="bt-3 btn btn-success border-0 mt-4" style="background-color:#ec1313;">Eliminar</button>
        <a class="btn btn-success border-0 mt-4" asp-action="Index">Cancelar</a>
    </form>
</div>


<script src="~/js/bootstrap.bundle.min.js"></script>
<script src="~/js/tiny-slider.js"></script>
<script src="~/js/custom.js"></script>
