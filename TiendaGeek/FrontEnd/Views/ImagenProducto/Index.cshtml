@model IEnumerable<FrontEnd.Models.ImagenProductoViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="author" content="Untree.co">
    <link rel="shortcut icon" href="favicon.png">

    <meta name="description" content="" />
    <meta name="keywords" content="bootstrap, bootstrap4" />

    <!-- Bootstrap CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="css/tiny-slider.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">
    <title>Furni Free Bootstrap 5 Template for Furniture and Interior Design Websites by Untree.co</title>
</head>

<body>
    <div class="container pt-4">
        <div class="row mt-4">
            <h1 style="color:black; font-weight:600;">Imágenes de productos</h1>

        </div>
    </div>
    <div class="d-flex justify-content-start gap-2 pt-1">
        <a asp-action="Create" class="btn btn-success border-0 mt-4" style="background-color:#1bc576;">Agregar</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                   Codigo
                </th>
                <th>
                   Producto
                </th>
                <th>
                    Ruta de la imagen
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoImagen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreProducto) <!-- Aquí muestras el nombre del producto -->
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RutaImagen)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.CodigoImagen }, new { @class = "btn btn-success border-0 mt-4", @style = "background-color:#74c0fc; color: #fff;" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.CodigoImagen }, new { @class = "btn btn-success border-0 mt-4", @style = "background-color:#ec1313; color: #fff;" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="js/tiny-slider.js"></script>
    <script src="js/custom.js"></script>
</body>
</html>
