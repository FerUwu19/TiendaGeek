@model FrontEnd.Models.ProductoViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

<div class="container mt-lg-5">
    <div class="row">

        <div>
            <a class="text-decoration-none " asp-action="Index"><i class="fa-solid fa-arrow-left"></i>     Seguir comprando</a>
        </div>
        <!-- Carousel for product images -->
        <div class="col-md-4 mt-2 mb-4">
            <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/icon-image-not-found.jpg" class="d-block w-100 img-fluid" alt="Product Image 1">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/icon-image-not-found.jpg" class="d-block w-100 img-fluid" alt="Product Image 2">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/icon-image-not-found.jpg" class="d-block w-100 img-fluid" alt="Product Image 3">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#productCarousel" role="button" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </a>
                <a class="carousel-control-next" href="#productCarousel" role="button" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </a>
            </div>
        </div>
        <!-- Product information -->
        <div class="col-md-6 mt-2">
            <dl class="row">
                <dd class="h2">@Html.DisplayFor(model => model.Nombre)</dd>

                <dd class="h5">@Html.DisplayFor(model => model.Descripcion)</dd>

                <dd class="col-sm-8"><strong>@Html.DisplayFor(model => model.Precio)</strong></dd>

                <dd class="col-sm-8">@Html.DisplayFor(model => model.Unidades)</dd>

                <dd class="col-sm-8">@Html.DisplayFor(model => model.Estado)</dd>
            </dl>
            <div class="mt-4">
                <a class="btn btn-success border-0 mt-4" style="background-color:#f9bf29;" asp-action="">
                    <i class="fa-solid fa-cart-shopping fa-xs me-1" style="color: #ffffff;"></i>
                    Agregar
                    </a>
            </div>
        </div>
    </div>
</div>

<script src="js/bootstrap.bundle.min.js"></script>
<script src="js/tiny-slider.js"></script>
<script src="js/custom.js"></script>
