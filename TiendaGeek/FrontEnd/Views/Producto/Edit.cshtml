@model FrontEnd.Models.ProductoViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

<div class="row pt-4">
    <div class="col-md-4">
        <h1 style="color:black; font-weight:600;">Editar producto</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mt-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="CodigoProducto" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Seleccione la categoría</label>
                @Html.DropDownListFor(
                         model => model.CodigoCategoria,
                         new SelectList(Model.Categorias, "CodigoCategoria", "Nombre"),
                         new { @class = "form-select", onchange = "this.form.submit()" }
                         )
                <span asp-validation-for="CodigoCategoria" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unidades" class="control-label"></label>
                <input asp-for="Unidades" class="form-control" />
                <span asp-validation-for="Unidades" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="d-flex mt-4 align-content-center justify-content-center">
                <input type="submit" value="Guardar" class="btn btn-secondary border-0" />
                <a class="ms-4 btn btn-success border-0" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
