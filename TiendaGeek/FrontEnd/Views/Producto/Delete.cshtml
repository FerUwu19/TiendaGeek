@model FrontEnd.Models.ProductoViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

<div class="container mt-5">
    <h1 class="mb-4">Eliminar Producto</h1>
    <h5>¿Seguro de eliminar este producto?</h5>
    <form asp-action="Delete">
        <input type="hidden" name="CodigoProducto" value="@Model.CodigoProducto" />

        <div class="form-group mb-3">
            <label for="Nombre">Nombre:</label>
            <p>@Model.Nombre</p>
        </div>
        <div class="form-group mb-3">
            <label for="Descripcion">Descripción:</label>
            <p>@Model.Descripcion</p>
        </div>
        <div class="form-group mb-3">
            <label for="Precio">Precio:</label>
            <p>@Model.Precio</p>
        </div>
        <div class="form-group mb-3">
            <label for="Unidades">Unidades:</label>
            <p>@Model.Unidades</p>
        </div>
        <div class="form-group mb-3">
            <label for="Estado">Estado:</label>
            <p>@Model.Estado</p>
        </div>

        <button type="submit" class="bt-3 btn btn-success border-0 mt-4" style="background-color:#ec1313;">Eliminar</button>
        <a class="btn btn-success border-0 mt-4" asp-action="Index">Cancelar</a>
    </form>
</div>

<script src="~/js/bootstrap.bundle.min.js"></script>
<script src="~/js/tiny-slider.js"></script>
<script src="~/js/custom.js"></script>
